<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    tools:context=".Activity.Profile">

    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_radius_bottom"
        android:backgroundTint="@color/darkBlue"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/view_profile"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/viewprofile" />

                <ImageView
                    android:id="@+id/settings"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/settings_icon" />

            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/dm_bold"
            android:text="Krishna Kumar Eswaran"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/user_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/dm_regular"
            android:text="Erode, IN"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:src="@drawable/createprofile" />
    </LinearLayout>


   <ScrollView
       android:layout_marginBottom="10dp"
       android:scrollbars="vertical"
       android:layout_below="@id/profile_layout"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/profile_layout"
           android:layout_margin="10dp"
           android:orientation="vertical">

           <com.google.android.material.card.MaterialCardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="15dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:padding="15dp">


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <ImageView
                           android:layout_width="25dp"
                           android:layout_height="25dp"
                           android:src="@drawable/about_user_icon" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="25dp"
                           android:textSize="14sp"
                           android:layout_marginStart="15dp"
                           android:fontFamily="@font/dm_bold"
                           android:gravity="center_vertical"
                           android:text="About me"
                           android:textColor="@color/black" />


                   </LinearLayout>




                   <TextView
                       android:layout_marginTop="8dp"
                       android:id="@+id/about"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Lorem ipsum dolor sit amet,\nconsectetur adipiscing elit. Lectus id commodo\negestas metus interdum dolor." />

               </LinearLayout>

           </com.google.android.material.card.MaterialCardView>

           <com.google.android.material.card.MaterialCardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               app:cardCornerRadius="15dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="12dp">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <ImageView
                               android:layout_width="25dp"
                               android:layout_height="25dp"
                               android:src="@drawable/work_exp" />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="25dp"
                               android:layout_marginStart="15dp"
                               android:fontFamily="@font/dm_bold"
                               android:gravity="center_vertical"
                               android:text="Work experience"
                               android:textColor="@color/black"
                               android:textSize="14sp" />


                       </LinearLayout>

                   </RelativeLayout>


                   <LinearLayout
                       android:id="@+id/workExp_layout"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="12dp"
                       android:layout_marginBottom="10dp"
                       android:layout_marginEnd="12dp"
                       android:orientation="vertical">

                   </LinearLayout>
               </LinearLayout>
           </com.google.android.material.card.MaterialCardView>

           <com.google.android.material.card.MaterialCardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:elevation="5dp"
               app:cardCornerRadius="16dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="12dp">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <ImageView
                               android:layout_width="25dp"
                               android:layout_height="25dp"
                               android:src="@drawable/skill" />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="25dp"
                               android:layout_marginStart="15dp"
                               android:fontFamily="@font/dm_bold"
                               android:gravity="center_vertical"
                               android:text="Skill"
                               android:textColor="@color/black"
                               android:textSize="14sp" />


                       </LinearLayout>


                   </RelativeLayout>

                   <com.google.android.material.chip.ChipGroup
                       android:id="@+id/skillChipGroup"
                       android:layout_marginStart="12dp"
                       android:layout_marginBottom="10dp"
                       android:layout_marginEnd="12dp"
                       android:visibility="gone"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
               </LinearLayout>

           </com.google.android.material.card.MaterialCardView>

           <com.google.android.material.card.MaterialCardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:elevation="5dp"
               app:cardCornerRadius="16dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">


                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="12dp">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <ImageView
                               android:layout_width="25dp"
                               android:layout_height="25dp"
                               android:src="@drawable/lan" />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="25dp"
                               android:layout_marginStart="15dp"
                               android:fontFamily="@font/dm_bold"
                               android:gravity="center_vertical"
                               android:text="Language"
                               android:textColor="@color/black"
                               android:textSize="14sp" />
                       </LinearLayout>
                   </RelativeLayout>
                   <com.google.android.material.chip.ChipGroup
                       android:id="@+id/lanChipGroup"
                       android:layout_marginStart="12dp"
                       android:layout_marginBottom="10dp"
                       android:layout_marginEnd="12dp"
                       android:visibility="gone"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
               </LinearLayout>
           </com.google.android.material.card.MaterialCardView>

       </LinearLayout>
   </ScrollView>

</RelativeLayout>